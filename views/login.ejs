<%- include('partials/header') %>

<div class="hero">
    <h1>NGO Login</h1>
    <p>Access the dashboard to view and help with community problems</p>
</div>

<div class="container">
    <div class="login-container" style="max-width: 450px; margin: 0 auto;">
        <% if (error) { %>
            <div class="alert alert-error show">
                <%= error %>
            </div>
        <% } %>

        <div class="card">
            <h2>Login to Dashboard</h2>
            <form action="/ngo/login" method="POST">
                <div class="form-group">
                    <label for="username">Username *</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="password">Password *</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
            </form>

            <p style="text-align: center; margin-top: 20px; color: var(--text);">
                New NGO? <a href="/ngo/register" style="color: var(--primary); font-weight: 500;">Register here</a>
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
